[Unit]
Description=Prometheus Monitoring Master
After=syslog.target network.target

[Service]
Type=simple
ExecStart={{ prometheus_deploy_dir }}/prometheus -config.file={{ prometheus_deploy_dir }}/prometheus.yml -storage.local.path={{ prometheus_deploy_dir }}/data
User=prometheus
Group=prometheus
Restart=always

[Install]
WantedBy=multi-user.target